{
  "name": "math-arena",
  "version": "1.0.0",
  "description": "Math Arena Game - Microservices Backend",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:auth\" \"npm run start:game\" \"npm run start:players\" \"npm run start:orchestrator\"",
    "start:auth": "nodemon services/auth-service/index.js",
    "start:game": "nodemon services/game-service/index.js",
    "start:players": "nodemon services/players-service/index.js",
    "start:orchestrator": "nodemon services/orchestrator-service/index.js",
    "test": "jest",
    "dev": "docker-compose up -d && npm start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "math",
    "game",
    "microservices",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT"
}
