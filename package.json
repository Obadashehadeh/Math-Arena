{
  "name": "math-arena",
  "version": "1.0.0",
  "description": "Math Arena Game - Microservices Backend with comprehensive monitoring and production-ready features",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:auth\" \"npm run start:game\" \"npm run start:players\" \"npm run start:orchestrator\"",
    "start:auth": "nodemon services/auth-service/index.js",
    "start:game": "nodemon services/game-service/index.js",
    "start:players": "nodemon services/players-service/index.js",
    "start:orchestrator": "nodemon services/orchestrator-service/index.js",
    "start:prod": "concurrently \"node services/auth-service/index.js\" \"node services/game-service/index.js\" \"node services/players-service/index.js\" \"node services/orchestrator-service/index.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "docker-compose up -d && npm start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "setup:indexes": "node scripts/setupIndexes.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prestart": "npm run setup:indexes"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.16.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "math",
    "game",
    "microservices",
    "nodejs",
    "rabbitmq",
    "mongodb",
    "jwt",
    "authentication",
    "real-time",
    "scalable",
    "production-ready"
  ],
  "author": "Math Arena Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/math-arena.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/math-arena/issues"
  },
  "homepage": "https://github.com/your-username/math-arena#readme"
}
